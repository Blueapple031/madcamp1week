<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/Contacts"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="left"
        android:lineSpacingExtra="6sp"
        android:text="@string/contacts"
        android:textAppearance="@style/contacts"
        android:fontFamily="@font/bmjua"
        android:translationY="-2.85sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 검색 및 정렬 UI -->
    <LinearLayout
        android:id="@+id/searchSortLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Contacts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="학식 검색하기"
            android:padding="6dp"
            android:background="@drawable/edittext_border"
            android:fontFamily="@font/bmhannaair_ttf"
            android:inputType="text" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="검색"
            android:fontFamily="@font/bmjua"
            android:backgroundTint="@color/black"
            android:padding="6dp" />

        <Button
            android:id="@+id/sortButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="정렬"
            android:fontFamily="@font/bmjua"
            android:backgroundTint="@color/black"
            android:padding="6dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bmjua"
        app:layout_constraintTop_toBottomOf="@id/searchSortLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        android:scrollbars="vertical" />
</androidx.constraintlayout.widget.ConstraintLayout>
